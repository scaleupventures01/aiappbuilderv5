# Elite Trading Coach AI - Production Environment
# This file contains production-specific configurations
# DO NOT commit this file to version control
# Use Railway Variables or Docker Secrets for actual values

# Frontend Build Variables
VITE_API_URL=https://api.elitetradingcoach.com
VITE_WS_URL=wss://api.elitetradingcoach.com
VITE_APP_NAME="Elite Trading Coach"
VITE_APP_VERSION=0.1.0

# Environment
NODE_ENV=production
DEBUG=false

# Server Configuration
PORT=${PORT:-3001}
FRONTEND_URL=${FRONTEND_URL}

# Production Database (Railway PostgreSQL)
PGUSER=${PGUSER}
PGPASSWORD=${PGPASSWORD}
PGHOST=${PGHOST}
PGPORT=${PGPORT:-5432}
PGDATABASE=${PGDATABASE}
DATABASE_URL=${DATABASE_URL}

# JWT Configuration (use Railway Variables)
JWT_SECRET=${JWT_SECRET}
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# OpenAI Configuration (Production)
# CRITICAL: Production mode configuration - NEVER use mock mode in production
USE_MOCK_OPENAI=false
OPENAI_API_KEY=${OPENAI_API_KEY}
OPENAI_MODEL=gpt-5
OPENAI_FALLBACK_MODEL=gpt-4o
OPENAI_REASONING_EFFORT=medium
OPENAI_SPEED_MODE=balanced
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.3
OPENAI_TIMEOUT=30000
OPENAI_MAX_RETRIES=3
OPENAI_RETRY_BASE_DELAY=1000
OPENAI_RETRY_MAX_DELAY=10000
OPENAI_RATE_LIMIT_RPM=${OPENAI_RATE_LIMIT_RPM:-60}
OPENAI_RATE_LIMIT_RPD=${OPENAI_RATE_LIMIT_RPD:-1000}
OPENAI_RATE_LIMIT_ENABLED=true
OPENAI_HEALTH_CHECK_INTERVAL=5
OPENAI_USAGE_LOGGING=true
OPENAI_COST_TRACKING=true
OPENAI_CIRCUIT_BREAKER_ENABLED=true
OPENAI_CIRCUIT_BREAKER_THRESHOLD=5
OPENAI_CIRCUIT_BREAKER_TIMEOUT=60000
OPENAI_MOCK_ENABLED=false
OPENAI_ORGANIZATION=${OPENAI_ORGANIZATION}
OPENAI_PROJECT=${OPENAI_PROJECT}

# Production API Security
API_KEY=${API_KEY}

# Rate Limiting (production limits)
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Security Headers (strict for production)
SECURITY_LEVEL=strict

# Cloudinary Configuration (production cloud)
CLOUDINARY_CLOUD_NAME=${CLOUDINARY_CLOUD_NAME}
CLOUDINARY_API_KEY=${CLOUDINARY_API_KEY}
CLOUDINARY_API_SECRET=${CLOUDINARY_API_SECRET}

# File Upload Configuration (production)
MAX_FILE_SIZE_MB=10
MAX_AVATAR_SIZE_MB=2
MAX_IMAGE_SIZE_MB=5
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp,pdf,doc,docx,txt

# Storage Quotas (production)
USER_STORAGE_QUOTA=1073741824  # 1GB per user
ADMIN_STORAGE_QUOTA=10737418240  # 10GB for admin users

# Production Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=false

# Production Monitoring
ENABLE_HEALTH_CHECKS=true
ENABLE_METRICS=true
SENTRY_DSN=${SENTRY_DSN}