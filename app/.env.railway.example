# Railway Production Environment Variables
# Copy this file to .env.railway and configure for your Railway deployment

# Node Environment
NODE_ENV=production
PORT=3000

# Database Configuration - Railway PostgreSQL
# Railway provides these automatically when you add a PostgreSQL service
DATABASE_URL=${RAILWAY_DATABASE_URL}
DB_HOST=${PGHOST}
DB_PORT=${PGPORT}
DB_NAME=${PGDATABASE}
DB_USER=${PGUSER}
DB_PASSWORD=${PGPASSWORD}
DB_SSL=true

# Application Configuration
APP_NAME=elite-trading-coach-ai
APP_VERSION=1.0.0

# Security Configuration
JWT_SECRET=${JWT_SECRET}
SESSION_SECRET=${SESSION_SECRET}
CORS_ORIGIN=${FRONTEND_URL}

# AI Service Configuration (if needed)
OPENAI_API_KEY=${OPENAI_API_KEY}
ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}

# File Upload Configuration (if using Cloudinary)
CLOUDINARY_CLOUD_NAME=${CLOUDINARY_CLOUD_NAME}
CLOUDINARY_API_KEY=${CLOUDINARY_API_KEY}
CLOUDINARY_API_SECRET=${CLOUDINARY_API_SECRET}

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Health Check Configuration
HEALTH_CHECK_ENDPOINT=/health
HEALTH_CHECK_TIMEOUT=30000

# Performance Configuration
CONNECTION_POOL_MAX=20
CONNECTION_POOL_IDLE_TIMEOUT=30000
CONNECTION_POOL_CONNECTION_TIMEOUT=5000

# Railway Specific
RAILWAY_ENVIRONMENT=${RAILWAY_ENVIRONMENT}
RAILWAY_PROJECT_ID=${RAILWAY_PROJECT_ID}
RAILWAY_SERVICE_ID=${RAILWAY_SERVICE_ID}